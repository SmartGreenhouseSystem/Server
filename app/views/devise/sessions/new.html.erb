<div class="card card-md">
  <div class="card-body">
    <h2 class="h2 text-center mb-4">Login to your account</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <label class="form-label">Email address</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', type: 'email' %>   
      </div>
      <div class="mb-2">
        <label class="form-label">
          Password
          <span class="form-label-description">
            <a href="./forgot-password.html">I forgot password</a>
          </span>
        </label>
        <div class="input-group input-group-flat">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', type: 'password', autocomplete:'off' %>
          <span class="input-group-text">
            <a href="#" class="link-secondary" data-bs-toggle="tooltip" aria-label="Show password" data-bs-original-title="Show password">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 12m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7"></path></svg>
            </a>
          </span>
        </div>
      </div>
      <div class="mb-2">
        <label class="form-check">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, type: 'checkbox', class: 'form-check-input' %>
              <span class="form-check-label">Remember me on this device</span>
            </div>
          <% end %>
        </label>
      </div>
      <div class="form-footer">
        <div class="actions">
          <%= f.submit "Log in", type: 'submit', class: 'btn btn-primary w-100' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="hr-text">or</div>
  <div class = "text-center mb-3 mt-3" >
    <%= render "devise/shared/links" %>
  </div>

</div>

