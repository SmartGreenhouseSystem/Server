<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:'card card-md'}) do |f| %>
  <div class="card-body">
    <h2 class="card-title text-center mb-4">Create new account</h2>
    <div class="mb-3">
      <label class="form-label">Username</label>
    <%= f.text_field :username, autofocus: true, type: 'text', class: 'form-control' %>
    </div>
    <div class="mb-3">
      <label class="form-label">Email address</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", type: 'email', class: 'form-control' %>
    </div>
    <div class="mb-3">
      <label class="form-label">Password</label>
      <div class="input-group input-group-flat">
        <%= f.password_field :password, autocomplete: "new-password", type:'password', class: 'form-control' %>
      </div>
    </div>
    <div class="mb-3">
      <label class="form-label">Confirm password</label>
      <div class="input-group input-group-flat">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", type:'password', class: 'form-control' %>
      </div>
    </div>
    <div class="form-footer">   
      <%= f.submit "Create new account", class: 'btn btn-primary w-100' %>
    </div>
  </div>
<% end %>
