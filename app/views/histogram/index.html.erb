<%= render "/layouts/page_header", page_title_pre: 'Overview', page_title: 'Histogram' %>

<%= render "/layouts/page_body" do %>
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Measurement readings</h3>
      </div>
      <input type="text" id="search-input">
      <div class="table-responsive">
        <table class="table card-table table-vcenter text-nowrap datatable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Value</th>
              <th>Unit</th>
              <th>Date and Time</th>
            </tr>
          </thead>
          <tbody>
            <% @measurements.each do |measurement| %>
              <tr>
                <td><%= measurement.name %></td>
                <td><%= sprintf("%.1f", measurement.value) %></td>
                <td><%= measurement.unit %></td>
                <td><%= measurement.recorded_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer d-flex align-items-center">
        <p class="m-0 text-muted">
          Showing <span><%= @start %></span> to <span><%= @end %></span> of <span><%= @count %></span> entries
        </p>
        <%= paginate @measurements %>
      </div>
    </div>
  </div>
<% end %>