<%= render "/layouts/page_header", page_title_pre: 'Overview', page_title: 'Histogram' %>

<%= render "/layouts/page_body" do %>
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Measurement readings</h3>
      </div>
      <div class="mb-3">
        <div class="form-label">Filter</div>
          <select class="form-select" id="filterType">
            <option disabled selected>Select</option>
            <option value="T">Temperature</option>
            <option value="H">Humidity</option>
            <option value='all'>All</option>
          </select>
      </div>
      <div class="mb-3"> 
        <label class="form-label">Measurement name </label>
        <input class="form-control" id="inputName" type="text" placeholder="Search Here.."> </div>
      </div>
      <div class="table-responsive">
        <table id = "measurementTable" class="table card-table table-vcenter text-nowrap datatable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Value</th>
              <th>Unit</th>
              <th>Date and Time</th>
            </tr>
          </thead>
          <tbody>
            <% @measurements.each do |measurement| %>
              <tr>
                <td id = "column-to-get"><%= measurement.measurement_type %></td>
                <td><%= measurement.name %></td>
                <td><%= sprintf("%.1f", measurement.value) %></td>
                <td><%= measurement.unit %></td>
                <td><%= measurement.recorded_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer d-flex align-items-center">
        <p class="m-0 text-muted">
          Showing <span><%= @start %></span> to <span><%= @end %></span> of <span><%= @count %></span> entries
        </p>
        <%= paginate @measurements %>
      </div>
    </div>
  </div>
<% end %>